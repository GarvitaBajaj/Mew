                    </configuration>
                </plugin> <plugin> <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId> <version>2.4</version> <configuration>
                    <archive> <manifest> <addClasspath>true</addClasspath> <classpathPrefix>lib/</classpathPrefix>
                    <mainClass>interfaces.MainScreen</mainClass> </manifest> </archive> <descriptorRefs>
